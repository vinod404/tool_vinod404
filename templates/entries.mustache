{{!
    @template tool_vinod404/entries

    This template displays a list of entries for the Vinod Learning plugin.

    Example context (json):
    {
        "coursename": "Test course",
        "table": "List of entries in a table",
        "addlink": "Moodle URL",
        "canadd": true / false,
    }
}}

<div class = "vinod404table">
    <h2>{{#str}} pluginname, tool_vinod404 {{/str}}</h2>
    <p>{{#str}} forcourse, tool_vinod404, {{coursename}} {{/str}}</p>
    {{#canadd}}
        <div> {{{ addlink }}} </div>
    {{/canadd}}
    {{{ table }}}
</div>
{{#js}}
    require(['tool_vinod404/delete'], function(vinod) {
        vinod.init('[data-action=delete]');
    });
{{/js}}
